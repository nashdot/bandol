{
  "name": "bandol",
  "version": "0.1.0",
  "description": "Bandol",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "ava -s",
    "precases": "rimraf ./cases/out && mkdirp ./cases/out && cd ./cases/react-hello && npm install",
    "cases": "ava -s",
    "coverage": "nyc npm test",
    "codecov": "cat coverage/lcov.info | codecov",
    "report": "npm run coverage && nyc report --reporter=lcov",
    "start": "babel-node index.js"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nashdot/bandol.git"
  },
  "keywords": [
    "javascript",
    "bundle",
    "es6",
    "jsnext"
  ],
  "author": "Stanislav Lesnikov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nashdot/bandol/issues"
  },
  "homepage": "https://github.com/nashdot/bandol#readme",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-eslint": "^6.0.0",
    "babel-plugin-lodash": "^3.0.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.8.0",
    "codeclimate-test-reporter": "^0.3.1",
    "codecov": "^1.0.1",
    "eslint": "^2.9.0",
    "eslint-config-nashdot": "^1.1.1",
    "mkdirp": "^0.5.0",
    "nyc": "^6.4.0",
    "rimraf": "^2.5.0",
    "sinon": "^1.17.3"
  },
  "dependencies": {
    "babel-generator": "^6.8.0",
    "babel-traverse": "^6.8.0",
    "babel-types": "^6.8.0",
    "babylon": "^6.8.0",
    "hashids": "^1.0.2",
    "image-size": "^0.5.0",
    "json-stringify-safe": "^5.0.1",
    "lodash": "^4.11.0",
    "loglevel": "^1.4.0",
    "resolve": "^1.1.7",
    "vm2": "^2.0.0"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "match": [
      "*"
    ],
    "failFast": true,
    "tap": true
  },
  "nyc": {
    "exclude": [
      "tests/**"
    ]
  }
}
